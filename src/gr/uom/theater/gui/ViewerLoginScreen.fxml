<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane prefHeight="200.0" prefWidth="300.0" styleClass="container" xmlns="http://javafx.com/javafx/8.0.65"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="gr.uom.theater.gui.controllers.ViewerLoginScreenController">
    <VBox alignment="CENTER" spacing="15.0">
        <HBox alignment="CENTER" spacing="10.0">
            <Label alignment="CENTER_RIGHT" minWidth="110.0" prefWidth="110.0" text="E-mail :">
                <font>
                    <Font name="System Bold Italic" size="12.0"/>
                </font>
            </Label>
            <TextField/>
        </HBox>
        <HBox alignment="CENTER" layoutX="10.0" layoutY="48.0" spacing="10.0">
            <Label alignment="CENTER_RIGHT" minWidth="110.0" prefWidth="110.0" text="Επιβεβαίωση :">
                <font>
                    <Font name="System Bold Italic" size="12.0"/>
                </font>
            </Label>
            <TextField/>
        </HBox>
        <HBox alignment="CENTER" layoutX="10.0" layoutY="123.0" spacing="10.0">
            <Label alignment="CENTER_RIGHT" minWidth="110.0" prefWidth="110.0" text="Αριθμός Κάρτας :">
                <font>
                    <Font name="System Bold Italic" size="12.0"/>
                </font>
            </Label>
            <TextField/>
        </HBox>
        <HBox alignment="CENTER" spacing="30.0">
            <Button minWidth="50.0" mnemonicParsing="false" prefWidth="50.0" text="Πίσω" fx:id="btnBack"/>
            <Button minWidth="50.0" mnemonicParsing="false" prefWidth="50.0" text="ΟΚ" fx:id="btnLogin"/>
        </HBox>
    </VBox>
</StackPane>
